/ ENTRY THUMB 1D - GENERAL
%a.thumb-1d{href: user_entry_path(entry.user.username, entry), class: entry.images.blank? ? "noImage" : ""}
  / LEFT SIDE
  .left
    .user
      .avatar{style: "background-image: url(#{avatar_image(entry.user, 32)}); background-repeat: no-repeat"}
      %p.name= entry.user.username

    - unless entry.comments.count == 0
      .commentCount
        .counter= entry.comments.count

    / only for +image
    .image{style: "background: url(#{dream_header_url(entry.images.first)}) no-repeat top left"}
      .fade

    %h1.title= entry.title
    / only for noimage
    %h2.titleWatermark= entry.title
    %p.text= entry.body
 
    / ENTRY THUMB DETAILS
    .details
      / REPOSTED BY
      .rePost.hidden
        reposted by:
        %span.rePostBy username
      / DATE
      .date= time_ago_in_words(entry.created_at)
      / STARLIGHT
      .starlight
        %img{src: '/images/icons/starlight-17.png', width: '17', height: '17'}
        %span= entry.starlight._?.value || 0

    .divider

  / RIGHT SIDE
  %table.right

    / TOP ROW - IMAGE THUMBNAILS
    - unless entry.images.blank?
      %tr
        %td.top{valign: "top", height: "64"}
          %ul
            - entry.images.limit(5).each do |image|
              %li{style: "background: url(#{image.url(:thumb, :size => 64)}) no-repeat top left"}

    / MIDDLE ROW - TAG CLOUD
    %tr
      %td.middle.tagCloud
        - entry.tags.limit(16).shuffle.each do |tag|
          %div{ class: "s#{tag.position.to_s}" }= tag.noun.name



/ APPEARANCE PANEL
#appearancePanel.hidden.target
  .arrow

  %input#defaultGenre{:type => 'hidden', :'value' => current_user.view_preference.default_genre}

  / BEDSHEETS
  .bedsheets
    .img
    %h2 bedsheets
    %select#genreSelector
      %option all genres
      %option space
      %option earth
      %option something else
    
    #bedsheetScroller
      %ul
      .spinner

    - unless is_ipad?
      .attachment 
        %span#fixed.fixed
          fixed
        %span#scroll.scroll
          scroll  
        .clear
    /
      .more + browse more...

  / COLOR PICKER
  .colorPicker
    .img
    %h2 color
    .buttons
      %a#light.sun.span
        sun
        %img{src: '/images/icons/sun-24.png'}
      %a#dark.moon.span       
        moon
        %img{src: '/images/icons/moon-24.png'}  

        
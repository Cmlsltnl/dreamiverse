!!! 5
%html
  %head
    %title Dreamcatcher
    = sass_link_tag 'shared'
    = stylesheet_link_tag :all
    = javascript_include_tag 'jquery', 'rails', 'application', 'pubsub', "jquery.hoverIntent.minified", "functions.core", 'home'
    = javascript_include_tag "http://connect.facebook.net/en_US/all.js"
    = coffeescript_include_tag 'loginpanel'
    = csrf_meta_tag
    = yield :head

  %body.light
    = render "shared/facebook_sdk"
    %p.notice= notice
    %p.alert= alert

    = yield

    - if Rails.env == 'production'
      = javascript_include_tag "google_analytics"

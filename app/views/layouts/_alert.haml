:coffeescript
  $(document).ready ->
    $('#globalAlert').click ->
      $(this).remove()
    
    # setupTimer
    setTimeout(removeAlert, 7000)
  
  removeAlert = ->
    $('#globalAlert').fadeOut('500', => $(this).remove())


#globalAlert
  .notice{class: "#{flash.notice ? '' : 'hidden'}"}
    %p= raw(flash.notice)
    .checkmark

  .alert{class: "#{flash.alert ? '' : 'hidden'}"}
    %p= raw(flash.alert)
    .close-24

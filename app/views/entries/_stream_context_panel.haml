/ CONTEXT PANEL
#streamContextPanel

  / USER INFO
  .userInfo
    %a.avatar-64{href: "/", style: "background:url(#{avatar_image(current_user, :medium)}) top left"}

    .infoRight
      %a.userName{href: '/'}
        %h3= user.username
      .clear

      .following
        .count= user.following.count
        following
      .followers
        .count= user.followers.count
        followers

  / LABEL
  .myStream
    my stream

  .wrapper

    / FILTER BY ENTRY TYPE
    .entryFilter.trigger.slideArrow
      %img.icon{src: '/images/icons/allEntries-16.png'}
      %img.arrow{src: '/images/icons/arrow-down-16.png'}
      %span.value all entries
    .filterList.target.slideArrow.hidden
      .type.top
        %img{src: '/images/icons/dream_cloud-16.png', width: '16', height: '16'}
        %span all entries
      .type
        %img{src: '/images/icons/dream_cloud-16.png', width: '16', height: '16'}
        %span dream
      .type
        %img{src: '/images/icons/dream_cloud-16.png', width: '16', height: '16'}
        %span vision
      .type
        %img{src: '/images/icons/dream_cloud-16.png', width: '16', height: '16'}
        %span experience
      .type.bottom
        %img{src: '/images/icons/dream_cloud-16.png', width: '16', height: '16'}
        %span tags

  .wrapper

    / FILTER BY FOLLOW TYPE
    .followFilter.trigger.slideArrow
      %img.icon{src: '/images/icons/friend-follow-16.png'}
      %img.arrow{src: '/images/icons/arrow-down-16.png'} 
      %span.value following
    .filterList.target.slideArrow.hidden
      .type.top
        %img{src: '/images/icons/friend-16.png', width: '16', height: '16'}
        %span friends
      .type.bottom
        %img{src: '/images/icons/friend-follow-16.png', width: '16', height: '16'}
        %span following

  .wrapper

    .starlightTab.trigger.slideArrow.round-8
      %img.icon{src: '/images/icons/starlight-17.png'}
      %span starlight
      .starlightFilter
        %span.value all
        .filterList.target.slideArrow.hidden
          .type.top
            %span hi
          .type
            %span medium
          .type.bottom
            %span all





- content_for :head do
  = sass_link_tag 'home'
  = coffeescript_include_tag 'loginpanel'

#drop_shadow

#home.light

  / DREAMCATCHER LOGO
  %a.dcLogo{href: '#'}
    %img{src: '/images/logos/dreamcatcher-366.png', width: '366', height: '102', alt: 'Dreamcatcher'}

  / WELCOME
  .welcomeWrap
    %img.dreamstar{src: '/images/icons/dreamstar-148.png', width: '148', height: '148', alt: 'dreamstar'}

    .welcome
      %pDreamcatcher is a digital journaling and social life-sharing service that lets you 'catch' your dreams and most cherished life experiences, and keep them organized and easy to share.
      %p Discover a deeper part of yourself, explore your subconscious mind, and share your creative journey with the world.
      %p A global social experiment to map the collective unconscious, Dreamcatcher is your space to chart the mysteries of the mind, explore global dream trends, and inspire greater synchronicity in your life.
      %p Start sharing and become part of the digital Dreamsphere.

      .thankyou Thank You



  / RIGHT COLUMN
  #rightColumn

    .dreamstarsMiniWrap
      .dreamstarsMini
        %a{href: '/dreamstars'}
          %img.logo{src: '/images/logos/dreamstars-182.png', width: '182', height: '50'}
          %span view all &rsaquo;
        - @users.each_with_index do |user, index|
          = if index < 5
            %div{class: "dreamstar-#{index+1}"}
              .badge
              .rank= index + 1
              .name= user.username


  / PUBLIC STREAM
  #publicStream
    .today today in dreams
    / .todayFilter today
    / %h1.in in
    / .dreamsFilter dreams
    .randomDream
      %span random
      dream!

    
    / DREAM MATRIX
    .matrix


      / / DREAM THUMBS 1D
      - @entries.each do |entry|
        = render :partial => 'entries/thumb_1d', :locals => {:entry => entry}
      - if @entries.blank?
        .noEntries No dreams yet today.

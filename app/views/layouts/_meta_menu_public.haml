#metaMenu.light

  .left-panel.padding-8.round-16.flat-top
    %a.item{href: '#'}
      intro
    %a.item{href: '#'}
      books
    %a.item{href: '#'}
      channels
    %form.float-left
      %input.input.padding-4-8.round-16{type: 'text', name: 'search' }


  .right-panel.bevel.round-16.flat-top
    .prompt
      %a.loginItem.button.round-12
        %img{src: '/images/icons/facebook-16.png', alt: 'Log in with Facebook', border: '0'}
      %a.loginItem.button.round-12
        %img{src: '/images/icons/twitter-16.png', alt: 'Log in with Twitter', border: '0'}
      %a.loginItem.button.round-12
        %img{src: '/images/icons/google-16.png', alt: 'Log in with Google', border: '0'}
      %a.login.button.confirm.bevel.round-12{href: '#'}
        login
      .joinWrap.round-12
        %a.join.round-12{href: '#'}
          Join Now >

    / LOGIN PANEL
    .loginPanel.hidden
      %span.bevel.button.round-4 I forgot my password
      %input.input.round-12{type: 'text', name: 'username', value: 'username / email' }
      %input.input.round-12{type: 'password', name: 'password', value: 'password' }
      %label.bevel.button.round-4
        keep me logged in
        %input{tabindex: '4', type: 'checkbox', name: 'remember_me'}

    .signupPanel.hidden
      %input.input.round-12{type: 'text', name: 'email', value: 'email' }
      %input.input.round-12{type: 'text', name: 'username', value: 'username' }
      %input.input.round-12{type: 'password', name: 'password', value: 'password' }
      %input.input.round-12{type: 'password', name: 'password', value: 'repeat password' }
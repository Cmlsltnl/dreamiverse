/ NEW DREAM LOCATION
#locationPanel.newDream_assets.light.transparent-50
  .locationHeader.headers.indent.button
    %img{src: '/images/icons/location-21.png', height: '16', width: '16'}
    location
  %select#locationList.locations.input.round-8
    %option{value: 'Home'} Home
    %option{value: 'The Pearl'} The Pearl
    %option{value: 'Flow Space'} Flow Space
    %option{value: 'Under I580'} Under I580
    %option{value: 'No Location'} No Location
    %option{disabled: 'true'} -----------
    %option{value: 'New Location'} New Location
  .cancel.indent.button.round-16 cancel
  .expander.hidden
    .name
      %p Location Name
      %input.input{value: 'Location Name'}
    .city
      %p City
      %input.input{value: 'City'}
    .state
      %p State / Province
      %input.input{value: 'State/Province'}
    .country
      %p Country
      %input.input{value: 'Country'}
    .save.indent.button.round-16 save
    %br{:style => 'clear: both'}

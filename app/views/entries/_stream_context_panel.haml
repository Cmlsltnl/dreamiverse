/ CONTEXT PANEL
#streamContextPanel{'data-filters' => "#{@filters}"}

  / USER INFO
  .userInfo
    %a.avatar-64{href: user_entries_path(user.username), style: "background:url(#{avatar_image(current_user, :medium)}) no-repeat center center"}

    .infoRight
      %a.userName{href: user_entries_path(user.username)}= user.username
      .clear

      %a.following{href: following_path(user.username)}
        .count= user.following.count
        following
      %a.followers{href: followers_path(user.username)}
        .count= user.followers.count
        followers

  / LABEL
  .myStream
    .img
    stream


  #entry-filter-wrap
    .spinner
    %select#entry-filter
      %option.allEntries{   value: 'all entries', :selected => @user.default_stream_entry_type_filter == 'all entries' ? true : nil } all entries
      %option.dreams{       value: 'dreams',      :selected => @user.default_stream_entry_type_filter == 'dreams' ? true : nil } dreams
      %option.visions{      value: 'visions',     :selected => @user.default_stream_entry_type_filter == 'visions' ? true : nil } visions
      %option.experiences{  value: 'experiences', :selected => @user.default_stream_entry_type_filter == 'experiences' ? true : nil  } experiences
      %option.articles{     value: 'articles',    :selected => @user.default_stream_entry_type_filter == 'articles' ? true : nil } articles
      %option.journals{     value: 'journals',    :selected => @user.default_stream_entry_type_filter == 'journals' ? true : nil } journals

  #users-filter-wrap
    .spinner
    
    %select#users-filter
      %option.allUsers{   value: 'all users', :selected => @user.default_stream_users_filter == 'all users' ? true : nil } all users
      %option.friends{    value: 'friends',   :selected => @user.default_stream_users_filter == 'friends' ? true : nil    } friends
      %option.following{  value: 'following', :selected => @user.default_stream_users_filter == 'following' ? true : nil  } following

  .wrapper


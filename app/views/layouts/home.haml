!!! 5
%html
  %head
    %title Dreamcatcher
    = sass_link_tag 'shared', 'home'
    = javascript_include_tag 'jquery.min', 'rails', 'application', 'pubsub', "jquery.hoverIntent.minified", "functions.core", 'home'
    = javascript_include_tag "http://connect.facebook.net/en_US/all.js"
    = coffeescript_include_tag 'loginpanel', 'dreamplugs', 'cookies'
    = csrf_meta_tag
    = yield :head

  %body.light{style: "background: url('/images/bedsheets/today-in-dreams-med.jpg') fixed top center #ccc"}
    = render "shared/facebook_sdk"

    #drop_shadow
    #home

      = yield

    - if Rails.env == 'production'
      = javascript_include_tag "google_analytics"

    = render "layouts/placeholder"
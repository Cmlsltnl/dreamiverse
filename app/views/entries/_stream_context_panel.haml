/ CONTEXT PANEL
#streamContextPanel{'data-filters' => "#{@filters}"}

  / USER INFO
  .userInfo
    %a.avatar-64{href: user_entries_path(user.username), style: "background:url(#{avatar_image(current_user, :medium)}) no-repeat center center"}

    .infoRight
      %a.userName{href: user_entries_path(user.username)}= user.username
      .clear

      %a.following{href: following_path(user.username)}
        .count= user.following.count
        following
      %a.followers{href: followers_path(user.username)}
        .count= user.followers.count
        followers

  / LABEL
  .myStream
    .img
    stream


  #entry-filter-wrap
    .spinner
    %select#entry-filter
      %option.allEntries{   value: 'all entries'   } all entries
      %option.dreams{       value: 'dreams'       } dreams
      %option.visions{      value: 'visions'      } visions
      %option.experiences{  value: 'experiences'  } experiences
      %option.articles{     value: 'articles'     } articles
      %option.journals{     value: 'journals'     } journals


  #users-filter-wrap
    .spinner
    
    %select#users-filter
      %option.allUsers{   value: 'all users'   } all users
      %option.friends{    value: 'friends'    } friends
      %option.following{  value: 'following'  } following

  .wrapper




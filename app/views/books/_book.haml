    / ACCESS PANEL
    .access-panel

      .header

        .back &lsaquo;

        .icon

        %span access

      .viewing viewing

      %select.select-menu.viewing-menu
        %option.everyone everyone
        %option.friends friends only
        %option.followers followers
        %option.private private

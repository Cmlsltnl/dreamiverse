!!! 5
%html
  %head
    %title Dreamcatcher
    = sass_link_tag 'shared', 'home'
    = javascript_include_tag 'jquery.min', 'pubsub', 'jquery.lightbox-0.5.pack'
    = coffeescript_include_tag 'loginpanel', 'dreamplugs', 'cookies', 'publicstream'
    =# javascript_include_tag "http://connect.facebook.net/en_US/all.js"
    / %script{type: "text/javascript", :'data-main' => "/javascripts/compiled/application", src: "/javascripts/require.js"}


    = csrf_meta_tag
    = yield :head

  %body.home.light
    -# render "shared/facebook_sdk"

    #drop_shadow
    #home
      .homeAlerts
        .notice= flash.notice
        .alert= flash.alert

      = yield

    - if Rails.env == 'production'
      = javascript_include_tag 'google_analytics'


.wrapper
  .tag.tagWhat.tagAnalysis.trigger.showhide{:'data-id' => what.id, :class => (@entry.user == current_user ? 'user' : '') }
    %span.tagContent= what.name
    - if close_button
      .close-16
    - unless what.dictionary_words.empty?
      .analysisIcon

      .alt.hidden.target.showhide
        - unless what.dictionary_words.count == 1
          - what.dictionary_words.count.times do |i|
            - page = i + 1
            %span{:class => (page == 1) ? 'selected' : ''}
              = page
              .marker

      .analysis.hidden.target.showhide
        .arrow
        - what.dictionary_words.each_with_index do |word, i|
          .description{:class => "definition-#{i}"}= simple_format(word.definition)
          %a.source{href: word.dictionary.attribution, target: '_blank'}= word.dictionary.name


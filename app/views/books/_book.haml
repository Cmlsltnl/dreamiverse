/ BOOKS
.book{:'data-id' => book ? book.id : 'new', class: (book && book.color) ? book.color : 'blue'}
  - coverUrl = (book && book.cover_image_id) ? Image.find(book.cover_image_id).url('252x252') : '/images/avatars/default-avatar-full.jpg'
  - title = (book && book.title) ? book.title : 'Title of Book Goes Here'
  / CLOSED BOOK
  .closed.hidden

    .entryDrop

    .cover{style: "background: url(#{coverUrl}) no-repeat center center"}

    .flat{class: (book && book.cover_image_id) ? 'mask' : ''} 

    .entries{style: 'background-image: url(/images/icons/entries-16.png)'}
      82

    .edit edit
    .title
      = title
      
    / %input.title-edit{type: 'text', value: 'Title of the Book Goes Here'}

    .comments{style: 'background-image: url(/images/icons/comment-16.png)'}
      4

    .sharing{style: 'background-image: url(/images/icons/friend-16.png)'}
      friends


  / OPEN BOOK
  .open


    / CONTROL PANEL
    .control-panel

      .settings-basic
        %input.titleInput{type: 'text', value: title}
        
        .color
          color
          .icon

        .coverImage
          cover image
          .icon

        .access
          access
          .icon

        .settings
          settings
          .icon

      .more

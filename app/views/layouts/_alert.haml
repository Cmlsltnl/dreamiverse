:coffeescript
  $(document).ready ->
    $('#globalAlert').click ->
      $(this).remove()
    
    # setupTimer
    setTimeout(removeAlert, 7000)
  
  removeAlert = ->
    $('#globalAlert').fadeOut('500', => $(this).remove())


#globalAlert
  - if flash.notice
    %p= raw(flash.notice)
    .checkmark

  - if flash.alert
    %p= raw(flash.alert)
    .close-24

/ STREAM CONTEXT PANEL
#streamContextPanel{'data-filters' => "#{@filters }"}

  / USER INFO
  .userInfo
    %a.avatar-64{href: user_entries_path(user.username), style: "background:url(#{avatar_image(current_user, :medium)}) no-repeat center center"}

    .infoRight
      %a.userName{href: user_entries_path(user.username)}= user.username
      .clear

      %a.following{href: following_path(user.username)}
        .count= user.following.count
        following
      %a.followers{href: followers_path(user.username)}
        .count= user.followers.count
        followers

  / LABEL
  .myStream
    .img
    stream

  #default-entry-filter{:'data-id' => @filters[:type]}
  #default-users-filter{:'data-id' => @filters[:users]}

  #entry-filter-wrap
    .spinner
    %select#entry-filter
      %option.allEntries{   value: '',           :selected => (@filters[:type].blank?)          } all entries
      %option.dreams{       value: 'dream',      :selected => (@filters[:type] == 'dream')      } dreams
      %option.visions{      value: 'vision',     :selected => (@filters[:type] == 'vision')     } visions
      %option.experiences{  value: 'experience', :selected => (@filters[:type] == 'experience') } experiences
      %option.articles{     value: 'article',    :selected => (@filters[:type] == 'article')    } articles
      %option.journals{     value: 'journal',    :selected => (@filters[:type] == 'journal')    } journals

  #users-filter-wrap
    .spinner
    %select#users-filter
      %option.allUsers{   value: '',          :selected => (@filters[:users].blank?)          } all users
      %option.friends{    value: 'friends',   :selected => (@filters[:users] == 'friends')    } friends
      %option.following{  value: 'following', :selected => (@filters[:users] == 'following')  } following

  .wrapper


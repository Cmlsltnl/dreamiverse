- content_for :head do
  %style
    :sass
      #newEntry
        position: absolute
        top: 40px
        right: 40px
        display: block
        padding: 4px 8px
        font-size: 17px
        font-weight: bold
        margin: 8px 12px 0 0
        text-decoration: none
        border: 2px solid transparent
        span
          color: #093
      .dream_thumb.light
        background: url("../images/gradients/light-dream_thumb-BG-A.png") repeat-x top #fff
      .dream_thumb.dark
        background: url("../images/gradients/dark-dream_thumb-BG-A.png") repeat-x top #000
      .dream_thumb
        width: 220px
        height: 320px
        margin: 12px 12px 0 0px
        overflow: hidden
        border: 0
        .link
          display: block
          border: 0 none
          position: absolute
          z-index: 900
          width: 220px
          height: 320px
        .image 
          width: 220px
          height: 96px
          -moz-border-radius-bottomright: 0px
          position: absolute
          background: url("../images/art/astral-eyes-banner.jpg") center 
        .watermark 
          position: absolute
          width: 220px
          height: 128px
          font-size: 45px
          line-height: 30px
          text-align: center
          overflow: hidden
        .details 
          position: absolute
          width: 220px
          z-index: 100 
        .date, .location, .comments, .sharing 
          margin: 4px
          font-size: 11px
          padding: 4px 8px
          text-align: center
        .comments, .sharing 
          margin-top: 262px
        .comments img 
          margin: 0 2px -5px 0 
        .sharing img 
          margin: -1px 0 -4px 2px 
        .title 
          margin-top: 96px
          font-size: 17px
          font-weight: bold
          text-align: center
          a 
            padding: 12px
        .tags
          padding: 0 16px


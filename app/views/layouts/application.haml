!!! 5
%html
  %head
    %title Dreamcatcher
    = csrf_meta_tag

    = sass_link_tag 'shared', 'appearance_panel'
    = stylesheet_link_tag 'basic', 'clearfix'
    = stylesheet_link_tag 'imageBank.artist', 'imagebank.artistList', 'imagebank.browse', 'imagebank', 'imagebank.searchImages', 'imagebank.searchList', 'imagebank.slideshow'

    = coffee_script_include_tag 'application'
    = javascript_include_tag 'jquery', 'rails', 'application', 'pubsub', "jquery.hoverIntent.minified", "functions.core"

    = yield :head

  %body{id: 'body', class: 'color light', style: 'background: url("/images/bedsheets/air-01.jpg") repeat scroll 0 0 #202020'}
    = render "shared/facebook_sdk"
    #drop_shadow
    = render "layouts/meta_menu"
    %p.notice= notice
    %p.alert= alert

    = yield

    - if Rails.env == 'production' || Rails.env == 'theta'
      = javascript_include_tag "google_analytics"


    = yield :foot
    = javascript_include_tag "http://connect.facebook.net/en_US/all.js"
    = javascript_include_tag "jquery-ui.min", "imageBank", "header", 'chat'
    

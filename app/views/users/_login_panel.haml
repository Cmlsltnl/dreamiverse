= coffeescript_include_tag 'loginpanel'

.loginPanelWrap.wrapper
  %a.login{href: login_path}
    .img
    %span login
  %a.loginItem.facebook{href: '/auth/facebook'}
    = render partial: "shared/hover_label", locals: {message: "log in with facebook", x: "8", y: "10"}
  .clear


  / LOGIN PANEL
  .loginPanel.hidden
    = form_for(User.new, {url: user_session_path}) do |f|

      .submit
        .text
          .img
          %span login
          %input#loginButton.button{tabindex: '3', name: 'loginButton', type: 'submit', value: 'log in &rsaquo;'}

      %span username
      = f.text_field(:username, {class: 'login-input', tabindex: '1'})

      %span password
      = f.password_field(:password, {class: 'login-input', tabindex: '2'})

      %label.stay
        Stay logged in
        %input{tabindex: '4', type: 'checkbox', name: 'remember_me'}

      %a.forgot{href: forgot_password_path} Forgot password

      .clear

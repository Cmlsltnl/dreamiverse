/ SETTINGS PANEL
#settingsPanel.hidden.target
  .arrow

  / SHARING
  .sharing


    .defaultSharing{:'data-id' => current_user.default_sharing_level}

      %img.sharing-icon{src: '/images/icons/share-24.png'}
      %h2.sharing-label default sharing


      %select#sharingList.sharingList
        %option.everyone{  value: Entry::Sharing[:everyone]  } everyone
        %option.friends{   value: Entry::Sharing[:friends]   } friends only
        %option.anonymous{ value: Entry::Sharing[:anonymous] } anonymous
        %option.private{   value: Entry::Sharing[:private]   } private


    %label.hidden
      I must authorize all follow requests
      %input.authFollow{type: 'checkbox'}
    .clear


    %hr.alpha-20


    .network

      %img.facebook-icon{src: '/images/icons/facebook-16.png'}
      %h2.facebook-label facebook login
      - if current_user._?.authentications._?.facebook?
        = link_to "/auth/#{current_user.authentications.facebook.first.id}.json", :method => :delete, :remote => true, :id => 'fbLink', :class => 'linkAccount' do
          un-link
      - else  
        %a#fbLink.linkAccount{href: '/auth/facebook'}
          link account

        
    .clear


  / CHANGE PASSWORD

  .changePassword.wrapper

    .trigger.showhide
      %img.password-icon{src: '/images/icons/admin-24-select.png'}
      %h2.password-label change password
      .clear


    .changePasswordForm.target.showhide.hidden
      = form_tag :user, :method => :put, :'data-type' => :json, :remote => true, :id => 'change_password' do
        = fields_for current_user do |f|
          %p.error
          %span current password
          = f.password_field :old_password
          %p.error
          %span new password
          = f.password_field :password
          %span confirm new password
          = f.password_field :password_confirmation
          .cancel cancel
          = f.submit :'change password', :class => 'confirm'
          .clear


    .clear






  /
    FONT SIZING
    .fontSizing
      %h2
        %img{src: '/images/icons/font_size-16.png'}
        Font
      .large A
      .medium A
      .small A

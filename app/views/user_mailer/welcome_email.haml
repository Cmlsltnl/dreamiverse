                %img{src: "http://dreamcatcher.net/images/icons/friend-24-follow.png",  width: "24", height: "24", border: "0", alt: "friends and followers", style: "border: 0px; margin-bottom: -6px; margin-right: 3px; margin-left: 3px"}

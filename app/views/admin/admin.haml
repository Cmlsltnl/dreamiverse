- content_for :headBefore do
  = sass_link_tag 'admin'
  %script{ :src => 'https://www.google.com/jsapi', :type => 'text/javascript', :charset => 'utf-8' }

#adminPage
  #entryField
    
    .charts.panel
      %h1 stats
      %br
      %br
      #chart-a.chart-select 'last 7 days in users'
      #chart-b.chart-select 'last 8 weeks in users'
      #chart-c.chart-select 'last 6 months in users'
      #chart-d.chart-select 'last 7 days in entries'
      #chart-e.chart-select 'last 8 weeks in entries'
      #chart-f.chart-select 'last 6 months in entries'
      #chart-g.chart-select 'last 6 months in entry types'
      #chart-h.chart-select 'last 6 months in comments'
      #chart-j.chart-select 'top 32 users by entries'
      #chart-k.chart-select 'top 32 users by starlight'
      #chart-l.chart-select 'top 32 tags'
      #chart-m.chart-select 'seed codes usages' 
             
      #chart-div{align: 'center'}




    / USERS PANEL
    .user.panel
      .header
        .img
        %h1 users
        .total= @users.count


      .last-week
        %h2 last week
        .total= @users_created_last_week
        .clear

      .last-month
        %h2 last month
        .total= @users_created_last_month
        .clear


      / USER CHARTS
      .module

        .userCharts
          user charts
          .arrow.up

        .clear


      / USER CHART BUTTONS
      .chartButtons

        .button-Wrap.select
          .button this week

        .button-Wrap
          .button 8 weeks

        .button-Wrap
          .button 6 months

        %hr

        .button-Wrap
          .button entries

        .button-Wrap
          .button starlight

        .button-Wrap
          .button seed codes


      / CHART
      .chart-Wrap
        .chart

      .clear


      / USER LIST
      .module.allUsers

        .userList
          user list
          .arrow.spinner

        .searchWrap
          %input.search{type: 'submit', value: ''}
          %input.search-input{type: 'text', value: 'search users'}

        %select#user-filter.select-menu.dropdown
          %option.orderBy{       value: ''             } ordered by:
          %option.age{           value: 'created_at'   } age
          %option.alphabetical{  value: 'username'     } username
          %option.entries{       value: 'entries'      } entries
          %option.starlight{     value: 'starlight'    } starlight
          %option.traffic{       value: 'traffic'      } traffic

        .clear


        #userList.clearfix
          = render(partial: 'user', collection: @users)
          .clear


          #nextPageEnd ›
          #nextPage ›

          #pages
          #prevPage ‹
          #prevPageEnd ‹


          #totalUsers{:'data-id' => @users.count}
          #pageSize{:'data-id' => @page_size}
          .clear






    / ENTRIES PANEL
    .entries.panel
      .header
        .img
        %h1 entries
        .total= Entry.count

      / entries last week
      / entries last month


      .last-week
        %h2 last week
        .total= @entries_created_last_week
        .clear

      .last-month
        %h2 last month
        .total= @entries_created_last_month
        .clear

      .last-month
        %h2 avg / user
        .total= @average_entries_per_user
        .clear

      .clear

      .entryCharts entry charts


      / ENTRY CHART BUTTONS
      .chartButtons

        .button-Wrap.select
          .button this week

        .button-Wrap
          .button 8 weeks

        .button-Wrap
          .button 6 months

        %hr

        .button-Wrap
          .button entry types

        .button-Wrap
          .button comments

        .button-Wrap
          .button tags


      / CHART
      .chart-Wrap
        .chart

      .clear





    / BEDSHEETS PANEL
    .bedsheets.panel
      .header#bedsheetsHeader
        .img
        %h1 bedsheets
        .total= @total_bedsheets
      .clear

      .module#bedsheet-nodes.clearfix
        / the bedsheet_node partial gets injected here
        .clear



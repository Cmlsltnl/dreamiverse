#metaMenu.user

  #drop_shadow

  / PRELOAD - METAMENU USER
  .hidden
    / HOME
    %img{src: '/images/icons/home-24-hover.png'}
    %img{src: '/images/icons/home-24-active.png'}
    / STREAM
    %img{src: '/images/icons/stream-24-hover.png'}
    %img{src: '/images/icons/stream-24-active.png'}
    / STARLIGHT
    %img{src: '/images/icons/starlight-24-hover.png'}
    %img{src: '/images/icons/starlight-24-active.png'}
    / SETTINGS
    %img{src: '/images/icons/settings-24-hover.png'}
    %img{src: '/images/icons/settings-24-active.png'}
    / APPEARANCE
    %img{src: '/images/icons/appearance-24-hover.png'}
    %img{src: '/images/icons/appearance-24-active.png'}



  / INTRO MENU
  .leftPanelWrap
    .leftPanel

      %a.item.home{href: user_entries_path(current_user.username)}
        .img
        = render partial: "shared/hover_label", locals: {message: "home", x: "12", y: "-30"}

      %a.item.stream{href: stream_path}
        .img
        = render partial: "shared/hover_label", locals: {message: "stream", x: "12", y: "-30"}

      %a.item.dreamstars{href: '/dreamstars'}
        .img
        = render partial: "shared/hover_label", locals: {message: "dreamstars", x: "12", y: "-30"}

    %a.randomDream{href: '/random'}
      = render partial: "shared/hover_label", locals: {message: "ramdom dream!", x: "19", y: "-30"}



  / LOG OUT
  %a.logOut{href: '/logout'}
    .img
    = render partial: "shared/hover_label", locals: {message: "log out", x: "0", y: "-4"}




  / SETTINGS MENU
  .rightPanel
    %a.item.user{:'data-id' => current_user.id, href: user_entries_path(current_user.username), style: "background:url(#{avatar_image(current_user, 32)}) no-repeat scroll 0 0 #000;"}
      %span
        = current_user.username


    .settingsPanel.wrapper
      .item.settings.trigger
        = render partial: "shared/hover_label", locals: {message: "settings", x: "10", y: "-30"}

      / SETTINGS PANEL
      = render partial: "users/settings_panel"



    - if page_is_mine?
      .appearancePanel.wrapper
        .item.appearance.trigger
          = render partial: "shared/hover_label", locals: {message: "appearance", x: "10", y: "-30"}

        / APPEARANCE PANEL
        = render partial: "users/appearance_panel"






- content_for :head do
  = sass_link_tag 'entries'
  = stylesheet_link_tag 'IB_manager'
- content_for :foot do
  = javascript_include_tag 'autoresize.jquery.min', 'geo', 'userfileuploader', 'dreams'
  = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false'
  = coffeescript_include_tag 'tag', 'dream', 'sharing'
/ CONTEXT BAR
= render :partial => "users/context_panel", :locals => {:user => current_user}

/ ENTRY
#entryField

  = form_for @entry do |f|

    / NEW ENTRY INPUT PANEL
    #newEntry

      .wrapper
        / MOOD ICON
        = render :partial => "mood_icon"

      .entryType.border
        %img{src: '/images/icons/dream-32.png'}
        %span#entryType_current{value: 'Dream'}
        %select#entryType_list
          %option{value: 'Dream'} Dream
          %option{value: 'Vision'} Vision
          %option{value: 'Experience'} Experience


      = f.text_field :title, :maxlength => '72', :class => 'font-21'
      %hr.alpha-30{style: 'width:662px; margin:6px auto;'}
      = f.text_area :body

      #entryOptions
        /
          Save for later  
          .myBooks
            %img{src: '/images/icons/books-16.png'} My Lucid Dreams

        = f.submit :value => 'post', :class => 'shine button save'
        .sharing
          %img{src: '/images/icons/share-16.png'} Everyone
          = f.select 'sharing_level', Entry::Sharing.map{|share, level| [share.to_s.titleize, level]}
        .addLocation
          %img{src: '/images/icons/location-21.png'}
        .date.indent
          %img{src: '/images/icons/date-19.png'}

        /
          NEW ENTRY SHARING
          #share.round-8
            %img.arrow{src: '/images/icons/uparrow-black.png'}
            %select.input.round-8
              %option{value: 'Public'} Public
              %option{value: 'Friends Only'} Friends Only
              %option{value: 'Private'} Private
            .social.round-8
              %label
                %img.icon{src: '/images/icons/facebook-16.png'}
                %span.name Facebook
                %input.checkbox{type: 'checkbox'}

    / NEW ENTRY DATE TIME
    = render :partial => "date_time"

    / NEW ENTRY LOCATION
    = render :partial => "location"

    / NEW ENTRY IMAGES
    = render :partial => "image_panel"

    / NEW ENTRY TAG
    .entryTags.entryAssets.hidden
      .tagHeader.headers
        tag
        %img{src: '/images/icons/tag-20.png'}
      .tagInputWrap
        %img{src: '/images/slices/inputLeftLight-40.png', width: '26', height: '40'}
        .tagInput
          %input#newTag
          .tagAdd
            %span +
            Add
        %img{src: '/images/slices/inputRightLight-40.png', width: '14', height: '40'}
      #tagBrowse
        %img{src: '/images/icons/browseBars-36-over.png', width: '34', height: '30'}
      #tag-list.tag-list.ui-sortable
        #empty-tag.tag_box.thumb-controls.hidden
          .content
        - @entry.whats.each do |what|
          .tag_box.thumb-controls
            .content= what.name
          
        %br{style: 'clear: both;'}
      #sorting.clear-both

    / NEW ENTRY LINK
    .entryLinks.entryAssets.hidden
      .linksHeader.headers
        links
        %img{src: '/images/icons/links-19.png'}
      #linkInputWrap
        %input#linkValue
        .linkAdd
          %span +
          Add
      .clear-both
      #linkHolder

    / NEW ENTRY MOOD

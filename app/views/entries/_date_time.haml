.entryDateTime.entryPanels
  .dateTimeHeader.headers
    .img
    date &amp; time

  - datetime = @entry.dreamed_at
  .date
    = select_month(datetime, {:prefix => :dreamed_at}, :class => 'month')
    = select_day(datetime, {:prefix => :dreamed_at},   :class => 'day')
    = select_year(datetime, {:prefix => :dreamed_at},  :class => 'year', :start_year => 1980)
  
  .time
    = dc_select_hour(datetime, {:prefix => :dreamed_at}, :class => 'hour')
    = dc_select_ampm(datetime, {:prefix => :dreamed_at}, :class => 'amPm')
  .clear
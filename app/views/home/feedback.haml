- content_for :head do
  -#= include_javascripts 'feedback'


:coffeescript
  # require({baseUrl: "/javascripts"}, ['feedback', 'autoresize.jquery.min.js'])

- if current_user.blank?
  / DREAMCATCHER LOGO
  %a.dcLogo{href: root_path}


/ FEEDBACK PAGE
#feedbackPage
  .feedbackLogo

  .wrapper

    = form_tag feedback_path, id: 'feedbackWrap' do
      .feedback

        %input#dreamcatcherVersion{ name: 'feedback[dreamcatcherVersion]', type: 'hidden', value: "#{VERSION}"}
        %input#userAgent{      name: 'feedback[userAgent]', type: 'hidden', value: 'none'}

        %select#type{name: 'feedback[type]'}
          %option{value: "none"} Type of feedback...
          %option{value: "bug" } Report a bug
          %option{value: "idea"} I have an idea...

        #bugType
          %select#bugOptions{name: 'feedback[bug_type]'}
            %option{value: "none"} Type of bug
            %option{value: "data not saving"} My data didn't save...
            %option{value: "browser crash"} My browser crashed when I was...
            %option{value: "confusing feature"} This feature is confusing...
            %option{value: "other"} Other...

        #details
          %textarea#detailsForm{name: 'feedback[body]'}

      #submitButton
        .sendWrap
          %input{type: 'submit', name: 'save', class: 'save', value: 'send'}


!!! 5
%html
  %head
    %title Dreamcatcher ( Life is a dream. )
    = csrf_meta_tag

    / ENABLE CHROME FRAME FOR IE
    %meta{:'http-equiv' => "X-UA-Compatible", content: "chrome=1"}

    / FACEBOOK THUMBNAIL
    %link{rel: 'image_src', href: "http://dreamcatcher.net/images/logos/dreamcatcher-fb.jpg"}

    = stylesheet_link_tag 'application', media: 'all'

    / = javascript_include_tag 'jquery.min', 'rails', 'pubsub', 'jquery.lightbox-0.5.min', 'jquery.placeholder'
    / = coffeescript_include_tag 'dreamplugs', 'cookies', 'publicstream'
    :coffee
      $(document).ready ->
        $('input[placeholder], textarea[placeholder]').placeholder()

    / %script{type: "text/javascript", :'data-main' => "/javascripts/compiled/application", src: "/javascripts/require.js"}

    -#= include_javascripts :vendor, :jmvc_framework, :jmvc_resources, :jmvc_application, :shared, :home
    = javascript_include_tag 'application'
    = yield :head







  %body#body.home{class: appearance_classes}

    -# render "common/facebook_sdk"

    = render :partial => "common/meta_menu/alert"

    #drop_shadow
    #home{class: current_user.blank? ? 'public' : ''}
      = yield

    = render :partial => "layouts/chrome_frame"

    - unless current_user.blank?
      / META MENU - USER
      = render :partial => "common/meta_menu/meta_menu"

    - if Rails.env.production?
      = javascript_include_tag 'google_analytics'

    = yield :foot

        .clear

      / ADD NEW LOCATION
      .modifyLocationView.target.toggle.hidden
        <b>Add a new location</b>
        %input{value: 'Location name'}
        %input{value: 'City'}
        %input{value: 'State / Province'}
        %input{value: 'Country'}
        .save Save
        .cancel Cancel
        .clear





  / CHANGE PASSWORD
  .changePassword.wrapper.showhide
    %h2.trigger.showhide
      %img{src: '/images/icons/key-16.png'}
      Change password

    .changePasswordForm.target.showhide.hidden
      %span Current password
      %input{type: 'password'}
      %span New password
      %input{type: 'password'}
      %span Repeat new password
      %input{type: 'password'}

      .cancel Cancel
      .confirm Change password
      .clear



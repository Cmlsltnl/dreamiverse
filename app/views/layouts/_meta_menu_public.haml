#metaMenu.public

  .leftPanel.padding-8.round-16.flat-top
    %a.item{href: '#'}
      intro
    %a.item{href: '#'}
      books
    %a.item{href: '#'}
      channels
    %form.float-left
      %input.input.padding-4-8.round-16{type: 'text', name: 'search' }


  .rightPanel.bevel.round-16.flat-top
    .prompt
      %a.loginItem.button.round-12
        %img{src: '/images/icons/facebook-16.png', alt: 'Log in with Facebook', border: '0'}
      %a.loginItem.button.round-12
        %img{src: '/images/icons/twitter-16.png', alt: 'Log in with Twitter', border: '0'}
      %a.loginItem.button.round-12
        %img{src: '/images/icons/google-16.png', alt: 'Log in with Google', border: '0'}
      %a.login.button.confirm.bevel.round-12{href: '#'}
        login

    / LOGIN PANEL
    .loginPanel
      = form_for('user', {url: user_session_path}) do |f|
        %a.forgot.button.round-4{href: '#'} Forgot password
        %label.stay.button.round-4
          Stay logged in
          %input{tabindex: '4', type: 'checkbox', name: 'remember_me'}
        = f.text_field(:username, {class: 'login-input input round-12', tabindex: '1'})
        = f.password_field(:password, {class: 'login-input input round-12', tabindex: '2'})
        %input#loginButton.round-12.button.post.confirm{tabindex: '3', name: 'loginButton', type: 'submit', value: 'Log in &rsaquo;'}

    / SIGN UP
    .signupPanel.hidden
      %input.input.round-12{type: 'text', name: 'email', value: 'email' }
      %input.input.round-12{type: 'text', name: 'username', value: 'username' }
      %input.input.round-12{type: 'password', name: 'password', value: 'password' }
      %input.input.round-12{type: 'password', name: 'password', value: 'repeat password' }

    / JOIN NOW
    .joinWrap.round-12
      %a.join.round-12{href: '#'}
        Join Now >

    / SIGN UP
    .signupWrap.round-12
      %input.signup.round-12{type: 'submit', value: 'Sign up >'}
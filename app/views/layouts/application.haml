!!! 5
%html
  %head
    %title Dreamcatcher
    = stylesheet_link_tag 'basic', 'clearfix'
    = stylesheet_link_tag 'imageBank.artist', 'imagebank.artistList', 'imagebank.browse', 'imagebank', 'imagebank.searchImages', 'imagebank.searchList', 'imagebank.slideshow'
    /, 'shared'
    = javascript_include_tag :defaults
    = javascript_include_tag "http://connect.facebook.net/en_US/all.js"
    = javascript_include_tag "imageBank"
    = csrf_meta_tag
    = yield :head

  %body{style: 'background: url("http://dreamcatcher.net/basic/inc/bedsheets/collection/geo/beyond/synapses-hi.jpg") repeat fixed 0 0 #202020'}
    = render "shared/facebook_sdk"
    #drop_shadow
    = render "layouts/meta_menu"
    %p.notice= notice
    %p.alert= alert

    = yield

    - if Rails.env == 'production'
      = javascript_include_tag "google_analytics"

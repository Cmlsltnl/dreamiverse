/ SETTINGS PANEL
#settingsPanel.hidden.target
  .arrow

  / SHARING
  .sharing
    .defaultSharing
      %img.sharingIcon{src: '/images/icons/everyone-16.png'}
      %h2 Default sharing
      %select.sharingList
        %option.everyone{value: 'Everyone'} Everyone
        %option.friends{value: 'Friends Only'} Friends only
        %option.anonymous{value: 'Anonymous'} Anonymous
        %option.private{value: 'Private'} Private
    %label.hidden
      I must authorize all follow requests
      %input.authFollow{type: 'checkbox'}
    .clear

    %hr.alpha-20

    .network.wrapper
      %img{src: '/images/icons/facebook-16.png'}
      %h2 Facebook
      .linkAccount.trigger.showhide
        Link account
      %label.target.showhide.hidden
        By default, share on Facebook
        %input.fbShare{type: 'checkbox'}
    .clear





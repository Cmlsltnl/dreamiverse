- content_for :head do
  = sass_link_tag 'admin'
  = javascript_include_tag 'jquery-ui.min'

#adminPage
  #entryField

    .user.panel
      .header
        .img
        %h1 users
        .total= @users.count


      .last-week
        %h2 last week
        .total= @users_created_last_week
        .clear

      .last-month
        %h2 last month
        .total= @users_created_last_month
        .clear

      / %select#user-filter.select-menu.dropdown
      /   %option.sortBy{       value: ''             } ordered by:
      /   %option.age{          value: 'age'          } age
      /   %option.alphabetical{ value: 'alphabetical' } alphabetical
      /   %option.entries{      value: 'entries'      } entries
      /   %option.starlight{    value: 'starlight'    } starlight
      /   %option.traffic{      value: 'traffic'      } traffic


      .module.allUsers
        #allUsersIcon.img
        #pageLoading.spinner
        %h2#allUsersHeader user list

        .clear


        / USER LIST
        #userList
          = render {partial: 'user', collection: @users}
        .clear



        #nextPageEnd ›
        %a#nextPage{href: "#"} ›

        #pages
        %a#prevPage{href: "#"} ‹
        #prevPageEnd ‹


        #totalUsers{:'data-id' => @users.count}
        #pageSize{:'data-id' => @page_size}
        .clear



    

        
      
    .entries.panel
      .header
        .img
        %h1 entries
        .total= Entry.count

      / entries last week
      / entries last month


      .last-week
        %h2 last week
        .total= @entries_created_last_week
        .clear

      .last-month
        %h2 last month
        .total= @entries_created_last_month
        .clear

      .clear

      / .module.activeUsers
      /   %h2 most active users
      / .clear
      / 
      / .module.seedCodes
      /   %h2 seed codes
      / .clear
      / 
      / .module.sharing
      /   %h2 sharing
      / .clear

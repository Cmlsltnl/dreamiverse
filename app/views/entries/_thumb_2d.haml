.thumb-2d

  / TITLE WATERMARK  (IF NO IMAGE - USE TITLE WATERMARK)
  .watermark= entry.title

  / LINK
  %a.link{:href => user_entry_path(entry.user.username, entry)}

  .fadedBack

    .image{style: "background-image: url('#{dreamfield_header_url(entry.main_image)}')"}

    / DETAILS (DATE + LOCATION)
    .detailsTop
      %table{width: "100%"}
        %tr
          %td.date= time_ago_in_words(entry.dreamed_at)
          / %td.location dream location

    .detailsBottom
      - unless entry.comments.count == 0
        .comments
          = image_tag("icons/comment-16-off.png")
          = entry.comments.count
      - unless entry.sharing == "everyone"
        .sharing
          %img
          %span= entry.sharing

    / TITLE
    .title= entry.title

    / TAG CLOUD
    .tagCloud
      - entry.tags.limit(16).shuffle.each do |tag|
        %div{ class: "s#{tag.position.to_s}" }= tag.noun.name

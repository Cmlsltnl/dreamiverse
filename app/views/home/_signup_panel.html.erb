<!-- SIGNUP PANEL -->
<div id="signupBack" class="categoryBack dark round-8 button-big-gray float-right">&lsaquo;</div>
<div id="signupButton" class="button-signup button-action round-8 dark text-glow-10 button-big-blue" style="position: relative;">Join Now
  <div id="fbHover" class="dark glow-40 round-4 float-right" style="position: absolute; right: 15pt; top: 29px"><div class="dark transparent-33 round-4 padding-4"><fb:login-button show-faces="false" max-rows="1" perms="<%= FB_PERMS %>" show-faces="true" width="178px"></fb:login-button></div></div>
</div>
<div id="signup">
  <%= form_for("user", :url => user_registration_path) do |f| %>
    <%#= devise_error_messages! %>
    <!-- EMAIL -->
    <%= f.label :email, :class => "signup-label round-8 light O-outline B-bevel flat-right" %>
    <%= f.text_field :email, :id => "signupEmail", :class => "signup-input round-8 text_input-big flat-left" %>
    <!-- PASSWORD -->
    <%= f.label :password, :class => "signup-label round-8 light O-outline B-bevel flat-right" %>
    <%= f.password_field :password, :class => "signup-input round-8 text_input-big flat-left" %>
    <!-- CONFIRM PASSWORD -->
    <%= f.label :password_confirmation, 'confirm password', :class => "signup-label round-8 light O-outline B-bevel flat-right" %>
    <%= f.password_field :password_confirmation, :class => "signup-input round-8 text_input-big flat-left" %>
    <!-- USERNAME -->
    <p class="float-left clear-left" style="margin:10px 0 0 15px; font-size:25px">create your username</p>
    <hr width="200" class="float-right hidden" style="margin:28px 8px 0 0;"> 
    <div style="clear:both"></div>
    <div class="signup-label round-8 light O-outline B-bevel flat-right">dreamcatcher.net/</div>
    <%= f.text_field :username, :id => "signupUsername", :class => "signup-input round-8 text_input-big flat-left", :style => "margin-bottom:15px" %>
    <!-- FB LOGIN -->
    <div class="fb-infoPanel light B O-outline round-8">
      <div id="fbSignIn">
        <div id="fbSignInLabel" class="font-11" style="margin:15px 0 5px; display:block;">Sign up using your Facebook account</div>
        <fb:login-button max-rows="1" perms="<%= FB_PERMS %>" show-faces="true" width="178px"></fb:login-button>
      </div>
    </div>
    <!-- SUBMIT -->
    <input type="hidden" name="seed_code" value="theta">
    <input type="submit" class="signup-next dark round-8 button-big-blue" value="next &rsaquo;">
    <div class="clear-both font-11 align-center">
      By signing up for an account, I agree to the <a href="/terms" class="terms-link dark B-button B-outline round-4">terms and services</a>
    </div>
  <% end %>
</div><!-- END SIGNUP PANEL -->


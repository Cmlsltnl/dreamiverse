- content_for :head do
  = stylesheet_link_tag 'dreamstars', 'shared'

#dreamstars.dark

  .header
    %img{:src => "http://www.dreamcatcher.net/basic/inc/images/logos/header-dreamstars.png", :alt => "Dreamstars"}
    .date.transparent-50.round-16
      %span global:
      december 28, 2010
    .clear-both

  / COLUMNS PANEL
  .columnsPanel.shine.round-16
    .rankColumn.round-8.input
      &#35;
    .nameColumn.round-8.input
      username
    .starlightColumn.round-8.input
      starlight
    .clear-both

  / TOP 6 DREAMSTARS
  - (1..6).each do |rank|
    - user = @users[rank-1] # @users index starts at 0.
    %a.static-black-transparent-50.round-32{class: "dreamstar-#{rank}"}
      .badge
        = image_tag "dreamstars/#{@top_images[rank]}"
      .rank
        = rank
      .name
        = user.username if user
      .starlight
        1500
      .clear-both


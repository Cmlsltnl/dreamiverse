!!! 5
%html
  %head
    %title
      = truncate(@title, length: 72) + ' - ' if @title
      Dreamcatcher ( Life is a dream. )
    = csrf_meta_tag

    = sass_link_tag 'shared'
    = stylesheet_link_tag 'imageBank.artist', 'imagebank.artistList', 'imagebank.browse', 'imagebank', 'imagebank.searchImages', 'imagebank.searchList', 'imagebank.slideshow'

    = coffeescript_include_tag 'application'
    = javascript_include_tag 'jquery.min', 'rails', 'application', 'pubsub', "jquery.hoverIntent.minified", "functions.core"

    = yield :head

  %body{id: 'body', class: "#{theme} scroll", style: bedsheet_style}
    = render "shared/facebook_sdk"

    #drop_shadow


    = render "layouts/meta_menu"


    = yield

    - if Rails.env == 'production' || Rails.env == 'theta'
      = javascript_include_tag "google_analytics"


    = yield :foot
    = javascript_include_tag "http://connect.facebook.net/en_US/all.js"
    = javascript_include_tag "jquery-ui.min", 'chat'
    = render "layouts/placeholder"
    

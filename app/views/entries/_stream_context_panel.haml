/ STREAM CONTEXT PANEL
#streamContextPanel{'data-filters' => "#{@filters }"}

  / USER INFO
  .userInfo
    %a.avatar-64{href: user_entries_path(user.username), style: "background:url(#{avatar_image(current_user, :medium)}) no-repeat center center"}

    .infoRight
      %a.userName{href: user_entries_path(user.username)}= user.username
      .clear

      %a.following{href: following_path(user.username)}
        .count= user.following.count
        following
      %a.followers{href: followers_path(user.username)}
        .count= user.followers.count
        followers

  / LABEL
  .myStream
    .img
    stream

  #default-entry-filter{:'data-id' => "#{current_user.default_stream_entry_type_filter}"}
  #default-users-filter{:'data-id' => "#{current_user.default_stream_users_filter}"}

  #entry-filter-wrap
    .spinner
    - type = current_user.stream_filter[:type]
    %select#entry-filter
      %option.allEntries{   value: '',            :selected => (type.blank?) } all entries
      %option.dreams{       value: 'dream',      :selected => (type == 'dream') } dreams
      %option.visions{      value: 'vision',     :selected => (type == 'vision') } visions
      %option.experiences{  value: 'experience', :selected => (type == 'experience')  } experiences
      %option.articles{     value: 'article',    :selected => (type == 'article') } articles
      %option.journals{     value: 'journal',    :selected => (type == 'journal') } journals

  #users-filter-wrap
    .spinner
    - users = current_user.stream_filter[:users]
    %select#users-filter
      %option.allUsers{   value: '', :selected => (users.blank?) } all users
      %option.friends{    value: 'friends',   :selected => (users == 'friends')    } friends
      %option.following{  value: 'following', :selected => (users == 'following')  } following

  .wrapper


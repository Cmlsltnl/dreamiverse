- content_for :head do
  = sass_link_tag 'home'
  = coffeescript_include_tag 'loginpanel'

#drop_shadow

#home.light

  / META MENU
  = render "layouts/meta_menu"

  / RIGHT COLUMN
  #rightColumn

    .dreamstarsMiniWrap
      .dreamstarsMini
        %a{href: '/dreamstars'}
          %img.logo{src: '/images/logos/dreamstars-182.png', width: '182', height: '50'}
          %span view all &rsaquo;
        - @users.each_with_index do |user, index|
          = if index < 5
            %div{class: "dreamstar-#{index+1}"}
              .badge
              .rank= index + 1
              .name= user.username

  / PUBLIC STREAM
  #publicStream
    .today today in dreams
    / .todayFilter today
    / %h1.in in
    / .dreamsFilter dreams
    .randomDream
      %span random
      dream!

    
    / DREAM MATRIX
    .matrix


      / / DREAM THUMBS 1D
      - @entries.each do |entry|
        = render :partial => 'entries/thumb_1d', :locals => {:entry => entry}
      - if @entries.blank?
        .noEntries No dreams yet today.

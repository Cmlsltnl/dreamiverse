#loginPage

  .logo

  .navigation.round-16.transparent-50.padding-8
    .button.bevel.round-12
      login
    .button.bevel.round-12
      signup
    .button.bevel.round-12
      forgot password
    .clear
  %br
  
  .login.round-16.transparent-50.padding-8
    = form_for('user', {url: user_session_path}) do |f|
      = f.text_field(:username, {class: 'input round-12', tabindex: '1'})
      = f.password_field(:password, {class: 'input round-12', tabindex: '2'})
      %input#loginButton.round-12.button.shine.post.confirm{tabindex: '3', name: 'loginButton', type: 'submit', value: 'Log in &rsaquo;'}

- content_for :head do
  = sass_link_tag 'entries'
  = stylesheet_link_tag 'jquery.lightbox-0.5.css'
- content_for :foot do
  = javascript_include_tag 'jquery.lightbox-0.5.pack.js', 'autoresize.jquery.min'
  = coffeescript_include_tag 'tag', 'showentry'



/ CONTEXT PANEL
= render :partial => "users/context_panel", :locals => {:user => @entry.user}



#entryField

  / SHOW ENTRY
  #showEntry{:'data-id' => @entry.id, :class => @entry.images.blank? ? "noImage" : "" }

    .type Dream

    %a.next.cancel{href: user_entry_path(@next.user.username, @next)}
      %span &rsaquo;
    .stream.cancel stream
    %a.prev.cancel{href: user_entry_path(@previous.user.username, @previous)}
      %span &lsaquo;

    - if @entry.user == current_user
      %a.editEntry{href: edit_entry_path(@entry)} edit
      = link_to 'delete', entry_path, :confirm => "Really?", :method => 'DELETE', :class => "deleteEntry"

    / 
      XXX
      .books.button.round-8 My Book of Dreams

    .content

      / HEADER IMAGE & TITLE
      .imageHeader{style: "background: url(#{dream_header_url(@entry.images.first)}) no-repeat top left"}
        .fade

      / MOOD ICON
      .moodIcon.hidden
        %img{src: '/images/moods/plants/Fungi.png'}

      / STARLIGHT COUNT & SHARE OPTIONS
      .starlight_share
        %img.starlight{src: '/images/icons/starlight-22.png'}
        %span= @entry.starlight._?.value

        /
          SAVE FOR LATER
          %hr
          .option.love
          .option.share
          .option.repost.selected
        
      .title= @entry.title

      / BODY
      .body= simple_format(@entry.body)

      / IMAGE GALLERY
      %ul.gallery
        - @entry.images.each do |image|
          = gallery_list_item(image)
      .clear


      / ENTRY LINKS
      - if @entry.links.count >= 1
        .entryLinks
          - @entry.links.each do |link|
            .link
              %span
                %a{href: "#{link.url}", target: "_blank"}= link.title
          .clear

      / TAG
      .showTags
        .tagHeader.headers
          tag
          %img{src: '/images/icons/tag-20.png'}

        .wrapper
          - if @entry.user == current_user
            .tagInput.target
              %input#newTag{placeholder: 'who/where/what'}
            .tagThisEntry.trigger
              %span +
              add

          / POST TIME & LOCATION
          .postTime= time_ago_in_words(@entry.created_at)
          .postLocation= @entry.wheres.first()


          #tag-list.tag-list.ui-sortable.target

            #empty-tag.hidden
              %span.tagContent
            - @entry.custom_tags.each do |what|
              .tagWhat.tag{:'data-id' => what.id }
                %span.tagContent= what.name

            / .clear
          #sorting
          .clear


    / COMMENTS
    .commentsPanel
      .trigger.slide
        .commentsHeader.headers
          comments -&nbsp; 
          %img{src: '/images/icons/comments-16.png', width: '16', height: '16'}
          .counter #{@comments.count}
      .clear
      
      .target.slide
        - @comments.each do |comment|
          = render :partial => "entries/comment", :object => comment
        
        .newCommentWrap
          .avatar{style: "background-image: url('#{avatar_image(current_user, 64)}')"}
          .newComment
            .user= current_user.username
            = form_for [@entry, Comment.new], :remote => true do |f|
              = f.hidden_field :user_id, :value => current_user.id
              = f.text_area :body
              = f.submit 'post', :class => 'save'
              .links.hidden
                %img{src: '/images/icons/link-16.gif', width: '16', height: '16'}
                links
              .images.hidden
                %img{src: '/images/icons/eye-images-16.png', width: '19', height: '13'}
                image
          .clear
        
        .clear


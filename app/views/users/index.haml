- content_for :head do
  :css
    .dreamstar-top6-1, .dreamstar-top6-2, .dreamstar-top6-3, .dreamstar-top6-4, .dreamstar-top6-5, .dreamstar-top6-6 {
      height:48px; margin-top:8px; margin-left:24px
      }
    
    .dreamstar-top6-1:hover, .dreamstar-top6-2:hover, .dreamstar-top6-3:hover, .dreamstar-top6-4:hover, .dreamstar-top6-5:hover, .dreamstar-top6-6:hover {
      cursor:pointer; border:4px solid #fff;
      }

    .dreamstar-top6-1 { border:4px solid #ff40d9; }
    .dreamstar-top6-1:hover { box-shadow: 0px 0px 60px #ff40d9 ; -webkit-box-shadow: 0px 0px 60px #ff40d9 ; -moz-box-shadow: 0px 0px 60px #ff40d9 }
  
    .dreamstar-top6-2 { border:4px solid #7140ff; }
    .dreamstar-top6-2:hover { box-shadow: 0px 0px 60px #7140ff ; -webkit-box-shadow: 0px 0px 60px #7140ff ; -moz-box-shadow: 0px 0px 60px #7140ff }

    .dreamstar-top6-3 { border:4px solid #4049ff; }
    .dreamstar-top6-3:hover { box-shadow: 0px 0px 60px #4049ff ; -webkit-box-shadow: 0px 0px 60px #4049ff ; -moz-box-shadow: 0px 0px 60px #4049ff }
  
    .dreamstar-top6-4 { border:4px solid #407aff; }
    .dreamstar-top6-4:hover { box-shadow: 0px 0px 60px #407aff ; -webkit-box-shadow: 0px 0px 60px #407aff ; -moz-box-shadow: 0px 0px 60px #407aff }
  
    .dreamstar-top6-5 { border:4px solid #409aff; }
    .dreamstar-top6-5:hover { box-shadow: 0px 0px 60px #409aff ; -webkit-box-shadow: 0px 0px 60px #409aff ; -moz-box-shadow: 0px 0px 60px #409aff }

    .dreamstar-top6-6 { border:4px solid #40bfff; }
    .dreamstar-top6-6:hover { box-shadow: 0px 0px 60px #40bfff ; -webkit-box-shadow: 0px 0px 60px #40bfff ; -moz-box-shadow: 0px 0px 60px #40bfff }
  
    .userList-rank { width:30px }
    .userList-name { width:200px; margin:0 155px }
    .userList-starlight { width:50px; margin-left:-15px }


#dreamstars
  %img.float-left{:src => "http://www.dreamcatcher.net/basic/inc/images/logos/header-dreamstars.png", :alt => "Dreamstars"}
  #dreamstarDate.dark.transparent-50.padding-8.align-center.round-16
    %b global
    \: december 28, 2010
 
  #dreamstarList
    .dark.round-16
      .dark.A-shine.round-16.padding-8
        #dreamstarRank.dark.padding-8.round-8.font-17.O-indent.align-center.float-left
          %b.alpha-60 #
        #dreamstarName.dark.padding-8.round-8.font-17.O-indent.align-center.float-left
          %b.alpha-60 username
        #dreamstarStarlight.dark.padding-8.round-8.font-17.O-indent.align-center.float-left
          %b starlight
        %br.clear-both
    

  - (1..6).each do |rank|
    - user = @users[rank-1] # @users index starts at 0.
    .dreamstarNode.dark.static-black-transparent-50.round-32{class: "dreamstar-top6-#{rank}"}
      #dreamstarBadge
        = image_tag "dreamstars/#{@top_images[rank]}", :class => "float-left"
      #dreamstarUserRank.padding-8.align-center.float-left
        %b.alpha-60= rank
      #dreamstarUserName.padding-8.align-center.float-left
        %b.alpha-60= user.username if user
      #dreamstarUserStarlight.padding-8.align-center.float-right
        %b 1500
      %br.clear-both
   

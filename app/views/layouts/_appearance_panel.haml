/ APPEARANCE PANEL
#appearancePanel.hidden.panel.glow-40.round-8.target
  .arrow

  / BEDSHEETS
  .bedsheets.panel.round-8
    #details
      %h2 Bedsheets
      %img.appearanceIcon{src: '/images/icons/appearance-32.png'}
      %a{href: '#'} options
    %ul
      %li
        %img{src: '/images/art/IB_artistImages/artistImage120-1.jpg'}
      %li
        %img{src: '/images/art/IB_artistImages/artistImage120-2.jpg'}
      %li
        %img{src: '/images/art/IB_artistImages/artistImage120-3.jpg'}
      %li
        %img{src: '/images/art/IB_artistImages/artistImage120-4.jpg'}
      %li
        %img{src: '/images/art/IB_artistImages/artistImage120-5.jpg'}

    %a.more.button.round-8{href: '#'} + browse more...

  / COLOR PICKER
  .colorPicker.panel.round-8
    %img.colorSwatch{src: '/images/icons/color_swatch_16.png'}
    %h2 Color
    #buttons.inner-shadow-10.round-8
      #sun.light.round-4.bevel.button{onclick: "$('#body').removeClass('dark'), $('#body').addClass('light')"}
        sun
        %img{src: '/images/icons/sun-24.png'}
      #moon.dark.round-4.bevel.button{onclick: "$('#body').removeClass('light'), $('#body').addClass('dark')"}
        moon
        %img{src: '/images/icons/moon-24.png'}

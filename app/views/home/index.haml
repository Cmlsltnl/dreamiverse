- content_for :head do
  :coffeescript
    require(['publicstream'])

.homeAlerts
  .notice= notice
  .alert= alert


/ DREAMCATCHER LOGO
%a.dcLogo{href: root_path}
  %img{src: '/images/logos/dreamcatcher-366.png', width: '366', height: '102', alt: 'Dreamcatcher'}

.randomDream
  %a{href: '/random'} random dream!


/ LEFT COLUMN
#leftColumn
  / WELCOME
  .welcomeWrap.hidden
    %img.dreamstar{src: '/images/icons/dreamstar-148.png', width: '148', height: '148', alt: 'dreamstar'}
    %h1 Welcome
    .welcome
      %p Dreamcatcher is a digital journaling and social life-sharing service that lets you 'catch' your dreams and most cherished life experiences, keeping them organized and easy to share.
      %p Discover a deeper part of yourself, explore your subconscious mind, and share your creative journey with the world.
      %p A global social experiment to map the collective unconscious, Dreamcatcher is your space to chart the mysteries of the mind, explore global dream trends, and inspire greater synchronicity in your life.
      %p Start sharing and become part of the digital Dreamsphere.

      .thankyou
        %img{src: '/images/icons/check-31.png', width: '31', height: '31'}
        %span Thank You

  / PUBLIC STREAM
  #publicStreamGlow
    #publicStream
      .today this week in dreams
      / .todayFilter today
      / %h1.in in
      / .dreamsFilter dreams

      / DREAM MATRIX
      .matrix


        / / DREAM THUMBS 1D
        - @entries.each do |entry|
          = render :partial => 'entries/thumb_1d', :locals => {:entry => entry}
        - if @entries.blank?
          .noEntries No dreams yet today.

  #bottomLinks
    %a{href: feedback_path} feedback / report a bug


/ RIGHT COLUMN
#rightColumn

  / LOGIN BUTTON

  .loginPanelWrap.wrapper
    %a.login{href: login_path}
      login
    %a.loginItem{href: '/auth/facebook'}
      %img{src: '/images/icons/facebook-16.png', alt: 'Log in with Facebook', border: '0'}
      = render partial: "shared/hover_label", locals: {message: "log in with facebook", x: "8", y: "-8"}
    .clear


    / LOGIN PANEL
    .loginPanel.hidden
      = form_for('user', {url: user_session_path}) do |f|
        %a.forgot{href: forgot_password_path} Forgot password
        %label.stay
          Stay logged in
          %input{tabindex: '4', type: 'checkbox', name: 'remember_me'}
        %p.error.hidden incorrect username
        = f.text_field(:username, {class: 'login-input', tabindex: '1', placeholder: 'username'})
        %p.error.hidden username and password do not match
        = f.password_field(:password, {class: 'login-input', tabindex: '2', placeholder: 'password'})
        %input#loginButton{tabindex: '3', name: 'loginButton', type: 'submit', value: 'log in &rsaquo;'}
        #loginSpacer

  / JOIN PANEL
  .joinPanel
    = form_for(User.new, url: user_registration_path) do |f|
      .intro
        %h1 New to Dreamcatcher?
        <p>Easy, free, and instant updates about what people are dreaming.</p>
        <p>What am I dreaming about?<br />
        Whose dreams am I in?<br />
        What is the world dreaming?</p> 
        <p>Start sharing now and find out... with the most advanced dream journal ever.</p>

      / JOIN TOGGLE - BUTTON
      .joinWrap
        %a.join{href: join_path} Join now &rsaquo;


  / DREAMSTARS MINI
  = render :partial => 'users/dreamstars_mini'



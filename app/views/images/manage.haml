- content_for :head do
  = sass_link_tag 'ib'

#frame.manager

  / TOP
  .browseWrap
    .browse
  .icon
  %h1 manager
  .searchWrap
    .search


  / DROPBOX
  .dropboxWrap#uploader

    .dropArea

    %h2.all select all
    .browse browse
    %h2.drag click or drag files here to upload

    .dropbox
      %ul.imagelist


  / ORGANIZATION
  .wrapper
    %h2.header.trigger.showhide organization
    #organization.panel.target.showhide

      %h2.label type
      .listWrap#type
        %input{type: "checkbox"}
        %select.list
          %option{value: "Library"} Library
          %option{value: "Bedsheets"} Bedsheets
          %option{value: "Prima Materia"} Prima Materia
          %option{value: "Book Covers"} Book Covers
          %option{value: "Tag"} Tag

      %h2.label category
      .listWrap#category
        %input{type: "checkbox"}
        %select.list
          %option{value: "General"} General
          %option{value: "Modern Art"} Modern Art
          %option{value: "Classical Art"} Classical Art
          %option{value: "Photo"} Photo

      %h2.label genre
      .listWrap#genre
        %input{type: "checkbox"}
        %select.list
          %option{value: "Placeholder"} Placeholder

      .clear


  / INFO
  .wrapper
    %h2.header.trigger.showhide info
    #info.panel.target.showhide.hidden

      .wrap
        .inputWrap#title
          %h2.label title
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .wrap
        .inputWrap#album
          %h2.label album
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .wrap
        .inputWrap#author
          %h2.label author
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .wrap
        .inputWrap#location
          %h2.label location
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .wrap
        .inputWrap.year#year
          %h2.label year
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .wrap
        .inputWrap.notes#notes
          %h2.label notes
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .clear



  / SOURCE
  .wrapper
    %h2.header.trigger.showhide SOURCE
    #source.panel.target.showhide.hidden

      .wrap
        .inputWrap.source
          %h2.label date
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .wrap
        .inputWrap.source
          %h2.label user
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .wrap
        .inputWrap.source
          %h2.label geotag
          %input.text{type: "text"}
          %input.checkbox{type: "checkbox"}

      .clear



  / TAGS
  .wrapper
    %h2.header.trigger.showhide tags
    #tags.panel.target.showhide.hidden

      .inputWrap.tags
        %textarea{type: "text",  rows: "2", cols: "75"}
        %input{type: "checkbox"}


  / FOOTER BUTTONS
  .saveWrap
    .save save

  .updateWrap
    .update update

  .cancelWrap
    .cancel cancel

  .clear



